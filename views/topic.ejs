<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/output.css" />
  </head>
  <body
    class="bg-zinc-900 text-white min-h-screen pt-12"
  >


  <% if(!locals.topic) {%>

    <%if(!locals.errors){ %>

      <div class="text-amber-500 text-6xl font-bold text-center">No topic selected</div>
      
      <% } else { %>
    <div class="flex flex-col items-center justify-center mt-20 px-4">
      <div aria-label="error box" 
          class="max-w-md w-full bg-zinc-800 border-l-4 border-red-500 rounded-r-lg p-8 shadow-2xl">
          <div class="flex items-center gap-3 mb-4">
              <h1 class="text-amber-500 text-2xl font-bold">Access Denied</h1>
          </div>

          <p class="text-gray-400 mb-6 text-sm">We encountered the following issues while trying to load this page:</p>

          <ul class="space-y-3">
              <% errors.forEach(error => { %>
                  <li class="flex items-start gap-2 text-red-200 bg-red-900/20 p-3 rounded border border-red-500/20">
                      <span class="text-red-500">â€¢</span>
                      <span class="text-sm font-medium"><%= error %></span>
                  </li>
              <% }) %>
          </ul>

          <div class="mt-8">
              <a href="/topics" class="block text-center py-2 px-4 bg-zinc-700 hover:bg-zinc-600 text-white rounded transition duration-200 text-sm font-semibold">
                  Go Back to Topics
              </a>
          </div>
      </div>
  </div>
<% } %>
  <% }else {%>


    <div class="text-amber-500 text-6xl font-bold text-center"><%= topic.name %></div>
    
    <% if(topic.topicType === 'public' || (topic.topicType === 'private' && (topic.userMembership === 'admin' || topic.userMembership ==='member'))){  %>

    <div class="grid grid-cols-6 gap-3 p-8">


      <section aria-label="user controls" class="bg-gray-800 rounded-lg py-7 px-3 flex flex-col gap-2">

          <a href="/post/new" class="btn-link">Make a new post</a>

          <% if(topic.userMembership === 'admin') { %>
            <a href="/topic/admin/<%= topic.id %>" class="btn-link">Admin panel</a>
          <% } %>
      </section>

      <section class="bg-gray-800 rounded-lg py-7 px-6 flex flex-col gap-4 col-span-4 col-start-2 col-end-6">

        <% topic.posts.forEach(post => { %>

          <article aria-label="single post" class="bg-gray-700 rounded-lg py-2 px-3">
            <p class="font-bold text-xl"><%= post.title %></p>
            <p class="py-2"><%= post.content %></p>
            <p>Created:  <%= new Date(post.created_at).toLocaleString() %></p>
          </article>
          
        <% }) %>
      </section>

      <section class="col-span-1 bg-gray-800 py-2 px-5 flex flex-col gap-2">
        <h1 class="text-amber-500 font-bold">Members</h1>
        <% topic.members.forEach(member => { %>

          <article aria-label="one member" class="bg-gray-700 rounded-lg py-2 px-3">
           <p><%= member.username %></p>
           <p class="text-sm text-gray-400"><%= member.status %></p>
          </article>
        <% }) %>

      </section>

    </div>
      <% }else {%>

        <div class="w-full text-center justify-center items-center mt-8 p-12">
          <p class="text-amber-500 font-bold mb-3">You don't have access to this topic!</p>

          <form action="/topic/joinRequest/<%= topic.id %>" method="post">
            <button type="submit" class="btn-link hover:cursor-pointer" onclick="alert('Request sent! Waiting for an admin to approve your request')">Send a request to join</button>
          </form>
       </div>
        <%} %>
    <% }%>

</body>

<script>

</script>
</html>
  